#:kivy 1.0.9



<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size


<DragButton>:
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_timeout: 10000000
    drag_distance: 10
    on_release: print(f'Drag Button {self.text} pressed')

GridLayout:
    cols: 2
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.4
        DragButton:
            text: '0'
        DragButton:
            text: '1'
        DragButton:
            text: '2'
        DragButton:
            text: '3'
    # BoxLayout:
        # id: middle
    BoxLayout:
        id:right
        DragButton:
            text: '0'
            size_hint_x: 0.4
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Do Nothing'
            Label:
                id: remove_zone
                text: 'Remove Widget'
