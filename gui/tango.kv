#:kivy 1.0.9



<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size


<ActionWidge>:
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_timeout: 10000000
    drag_distance: 10
    on_release: print(f'Drag Button {self.text} pressed')

GridLayout:
    cols: 4
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.3
        ActionWidge:
            id: button1
            background_normal: "hello.jpeg"
        ActionWidge:
            id: button2
            text: '2'
        ActionWidge:
            id: button3
            text: '3'
        ActionWidge:
            id: button4
            text: '4'
        ActionWidge:
            id: button5
            text: '5'
        ActionWidge:
            id: button6
            text: '6'
        ActionWidge:
            id: button7
            text: '7'
    BoxLayout:
        id: middle
        size_hint_x: 0.05
    BoxLayout:
        id:mainDrop
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                size_hint_y:0.3
                Label:
                    text: ''
                Button:
                    id: Clear Button
                    text: 'Clear!'
                    size_hint_x:0.3
            BoxLayout:
                PlaceHolderButton:
                    id: place1
                    text: '1'
                PlaceHolderButton:
                    id: place2
                    text: '2'
                PlaceHolderButton:
                    id: place3
                    text: '3'
                PlaceHolderButton:
                    id: place4
                    text: '4'
                PlaceHolderButton:
                    id: place5
                    text: '5'
                PlaceHolderButton:
                    id: place6
                    text: '6'
                PlaceHolderButton:
                    id: place7
                    text: '7'
                PlaceHolderButton:
                    id: place8
                    text: '8'
            BoxLayout:
                size_hint_y:0.3
                Label:
                    text: ''
                Button:
                    id: activateButton
                    text: 'Activate!'
                    size_hint_x:0.3
    BoxLayout:
        id: rightest
        size_hint_x: 0.05
