#:kivy 1.0.9
#:import NoTransition kivy.uix.screenmanager.NoTransition


<ActionWidge>:
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_timeout: 10000000
    drag_distance: 10
    on_release: print(f'Drag Button {self.text} pressed')

ScreenManager:
    id: screenManager
    transition: NoTransition()
    Screen:
        id: mainScreen
        name: "mainScreen"
        GridLayout:
            cols: 4
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.2
                DriveWidge:
                    id: button1
                    background_normal: "./assets/robotICONS/robotMotor.png"
                TurnWidge:
                    id: button2
                    background_normal: "./assets/robotICONS/robotTurn.png"
                HeadTiltWidge:
                    id: button3
                    background_normal: "./assets/robotICONS/robotheadtilt.png"
                HeadTurnWidge:
                    id: button4
                    background_normal: "./assets/robotICONS/robotheadturn.png"
                WaistWidge:
                    id: button5
                    background_normal: "./assets/robotICONS/robotwaistturn.png"
                InputWidge:
                    id: button6
                    background_normal: "./assets/robotICONS/robotWaitForSpeech.png"
                OutputWidge:
                    id: button7
                    background_normal: "./assets/robotICONS/robotTalkingKeyboard.png"
            BoxLayout:
                id: middle
                size_hint_x: 0.03
            BoxLayout:
                id:mainDrop
                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint_y:0.4
                        Label:
                            text: ''
                        ClearButton:
                            id: clearButton
                            text: 'Clear!'
                            size_hint_x:0.3
                    BoxLayout:
                        orientation: 'vertical'
                        BoxLayout:
                            size_hint_y: 0.45

                        BoxLayout:
                            size_hint_y: 0.4
                            id: placeHolderLayout
                            PlaceHolderButton:
                                id: place1
                                text: '1'
                                # allow_stretch: True
                                # keep_ratio: False
                            PlaceHolderButton:
                                id: place2
                                text: '2'
                            PlaceHolderButton:
                                id: place3
                                text: '3'
                            PlaceHolderButton:
                                id: place4
                                text: '4'
                            PlaceHolderButton:
                                id: place5
                                text: '5'
                            PlaceHolderButton:
                                id: place6
                                text: '6'
                            PlaceHolderButton:
                                id: place7
                                text: '7'
                            PlaceHolderButton:
                                id: place8
                                text: '8'
                        BoxLayout:
                            size_hint_y: 0.45
                    BoxLayout:
                        size_hint_y:0.4
                        Label:
                            text: ''
                        ActivateButton:
                            id: activateButton
                            text: 'Activate!'
                            size_hint_x:0.3
                        Label:
                            text: ''
                            size_hint_x:0.3
            BoxLayout:
                id: rightest
                size_hint_x: 0.03
    Screen:
        # id: settingsScreen
        name: "settingsScreen"
        GridLayout:
            cols: 3
            BoxLayout:
                size_hint_x: 0.1
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.8
                BoxLayout:
                    size_hint_y: 0.2
                    Label:
                        id: settingsTitleText
                    Button:
                        id: settingsTitleImage
                        size_hint_x: 0.35
                BoxLayout:
                    id: settingsLayout
                    size_hint_y: 0.6
                    Button:
                        text: "first button"
                    Button:
                        text: "second button"
                Label:
                    size_hint_y: 0.2
                    text: ""
            BoxLayout:
                size_hint_x: 0.1
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: ""
                    ReturnButton:
                        id: returnButton
                        text: "Return"
                        size_hint_y: 0.25
