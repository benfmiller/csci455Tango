#:kivy 1.0.9



<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size


<ActionButton>:
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_timeout: 10000000
    drag_distance: 10
    on_release: print(f'Drag Button {self.text} pressed')

GridLayout:
    cols: 4
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.3
        ActionButton:
            id: button1
            background_normal: "hello.jpeg"
        ActionButton:
            id: button2
            text: '1'
        ActionButton:
            id: button3
            text: '2'
        ActionButton:
            id: button4
            text: '3'
    BoxLayout:
        id: middle
        size_hint_x: 0.05
    BoxLayout:
        id:mainDrop
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Do Nothing'
            Label:
                id: remove_zone
                text: 'Remove Widget'
    BoxLayout:
        id: rightest
        size_hint_x: 0.05
