#:kivy 1.0.9





<DragButton>:
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_timeout: 10000000
    drag_distance: 10
    on_release: print(f'Drag Button {self.text} pressed')

BoxLayout:
    BoxLayout:
        orientation: 'vertical'
        DragButton:
            text: '0'
        DragButton:
            text: '1'
        DragButton:
            text: '2'
        DragButton:
            text: '3'
    BoxLayout:
        id: middle
    BoxLayout:
        id:right
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Do Nothing'
            Label:
                id: remove_zone
                text: 'Remove Widget'
