#:kivy 1.9.0
#:import NoTransition kivy.uix.screenmanager.NoTransition

<ScreenManager>:
    id: screenManager
    transition: NoTransition()
    Screen:
        id: mainScreen
        name: "mainScreen"
        BoxLayout:
            StartButton:
                text: "Start Game!"
    Screen:
        name: "gameScreen"
        BoxLayout:
            Button:
                id: mainButton
                text: "This is the game screen!"
    Screen:
        name: "deathScreen"
        BoxLayout:
            ReturnToMainButton:
                text: "This is the start screen!"
    Screen:
        name: "easyEnemyScreen"
        BoxLayout:
            ReturnToMainButton:
                text: "Easy enemy"
    Screen:
        name: "strongEnemyScreen"
        BoxLayout:
            ReturnToMainButton:
                text: "Easy enemy"
    Screen:
        name: "rechargingScreen"
        BoxLayout:
            ReturnToMainButton:
                text: "Easy enemy"
    Screen:
        name: "movingScreen"
        BoxLayout:
            ReturnToMainButton:
                text: "Easy enemy"
