#:kivy 1.9.0
#:import NoTransition kivy.uix.screenmanager.NoTransition

<ScreenManager>:
    id: screenManager
    transition: NoTransition()
    Screen:
        id: mainScreen
        name: "mainScreen"
        BoxLayout:
            StartButton:
                text: "Start Game!"
    Screen:
        name: "gameScreen"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                size_hint_y: 0.3
                Button:
                    id: mapNode
                    background_normal: "./images/gameMap.png"
                Label:
                    id:node
                    text: "sup"
                Label:
                    id: health
                    text: "00"
                Label:
                    id: moveNum
                    text: "1"
            ReturnToMainButton:
                id: mainButton
                text: ""
